<%= form_for(experience = current_user.experiences.find(experience), :url => update_user_info_path, :html => {:class => "edit_user", :remote => true}) do |f| %>
	<%= hidden_field_tag :id, id %>
	<%= f.label :company_name %>
	<%= f.text_field :company_name %><br /><br />
	<%= f.label :title %>
	<%= f.text_field :title %><br /><br />
	<%= f.label :location %>
	<%= f.text_field :location %><br /><br />
	<%= f.label :description %>
	<%= f.text_area :description, :class => "textarea_edit_experience"  %>
	<%= f.submit "update" %>
<% end %>
<%= link_to "Back", edit_user_info_path, :class => "back", :id => "back_to_previous", :remote => true %>