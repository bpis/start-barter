
<%= form_for(current_user, :url => update_user_info_path, :html => {:class => "edit_user", :remote => true }) do |f| %>
  
  Update Your Basic Profile Information <br />
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br />
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br />
  <%= f.label :Country %>
  <%= f.collection_select(:country_id, Country.all, :id, :name ) %><br />
  
  	<%= f.fields_for :profile, current_user.profile do |profile_field| %>
  		<%= profile_field.label :tagline %>
  		<%= profile_field.text_field :tagline %><br />
  		<%= profile_field.label :city %>
  		<%= profile_field.text_field :city %><br />
  		<%= profile_field.label :state %>
  		<%= profile_field.text_field :state %>
  	<% end %>
  	<br />
  <%= f.submit "Update" %>
  <% end %>

<%= link_to "Back", edit_user_info_path, :class => "back", :id => "back_to_previous", :remote => true %>

